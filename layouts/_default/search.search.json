{{- $index := slice -}}
{{- range where .Site.RegularPages "Type" "posts" -}}
  {{- $entry := dict
    "title" .Title
    "url" .RelPermalink
    "date" (.Date.Format "2006-01-02")
    "tags" .Params.tags
    "summary" ((.Summary | plainify | truncate 150) | default "")
  -}}
  {{- $index = $index | append $entry -}}
{{- end -}}
{{- $index | jsonify -}}
