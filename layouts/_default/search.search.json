{{- $index := slice -}}
{{- range .Site.RegularPages -}}
  {{- if and (eq .Type "posts") (eq .Lang $.Site.Language.Lang) -}}
    {{- $entry := dict
      "title" .Title
      "url" .RelPermalink
      "date" (.Date.Format "2006-01-02")
      "tags" .Params.tags
      "categories" .Params.categories
      "summary" ((.Summary | plainify | truncate 150) | default "")
    -}}
    {{- $index = $index | append $entry -}}
  {{- end -}}
{{- end -}}
{{- $index | jsonify -}}
