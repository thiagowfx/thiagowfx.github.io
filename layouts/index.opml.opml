<opml version="2.0">
  <head>
    <title>{{ .Site.Title }} Blogroll</title>
    <dateCreated>{{ now.Format "Mon, 02 Jan 2006 15:04:05 MST" }}</dateCreated>
    <dateModified>{{ now.Format "Mon, 02 Jan 2006 15:04:05 MST" }}</dateModified>
    <ownerName>{{ .Site.Params.author.name }}</ownerName>
    <ownerEmail>{{ .Site.Params.author.email }}</ownerEmail>
  </head>
  <body>
    {{ range .Site.Data.blogroll.categories }}
    <outline text="{{ .name }}" type="folder">
      {{ range .feeds }}
      <outline text="{{ .title }}" type="rss" xmlUrl="{{ .feed }}" htmlUrl="{{ .url }}"/>
      {{ end }}
    </outline>
    {{ end }}
  </body>
</opml>
